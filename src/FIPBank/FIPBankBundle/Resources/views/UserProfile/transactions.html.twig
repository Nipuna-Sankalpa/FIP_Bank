{% extends 'FIPBankBundle:Default:index.html.twig'%}
{% block title %}
    <title>Transactions</title>
{% endblock %}

{% block brand %}
    <a class="navbar-brand" href="#">FiBank Customer Portal</a>
{% endblock %}

{% block item %}
    <li>
        <a href="#"><i class="fa fa-dashboard fa-fw"></i> Transactions</a>
    </li>

    <li>
        <a href="#"><i class="fa fa-table fa-fw"></i> Transaction History</a>
    </li>
    <li>
        <a href="#"><i class="fa fa-edit fa-fw"></i> Settings</a>
    </li>     
{% endblock %}

{% block header %}
    <h2 class="page-header">Transactions</h2>
{% endblock %}

{% block pageContent %}
    <div id="accountDetails">
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-bitbucket fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">₦ 12</div>
                                <div><strong>Available physical Account balance</strong></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-bitbucket fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">₦ 12000</div>                                
                                <div><strong>Available Virtual Account balance</strong></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
    <div id="transactionForm" class="well">
        <form action="#" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="accountNumber" class="col-sm-2 control-label">Account</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="accountNumber" placeholder="Enter Your Account Number">
                </div>
            </div>
            <div class="form-group">
                <label for="accountNumberAffected1" class="col-sm-2 control-label">Transferred Account</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="accountNumberAffected1" placeholder="Enter Transferred Account Number">
                </div>                
            </div>
            <div class="form-group">
                <label for="accountNumberAffected2" class="col-sm-2 control-label">RE-Transferred Account</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="accountNumberAffected2" placeholder="Re-Type Transferred Account Number">
                </div>                
            </div>
            <div class="form-group">
                <label for="comment" class="col-sm-2 control-label">Comment</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="comment" placeholder="*Add Comment"></textarea>
                </div>                
            </div>
            <br />
            <div class="form-group">
                <label for="Amount" class="col-sm-2 control-label">Transferring Amount</label>
                <div class="input-group col-sm-4">                    
                    <label class="sr-only" for="Amount">Amount (in dollars)</label>
                    <div class="col-sm-1"></div>
                    <div class="input-group-addon">₦</div>
                    <input type="text" class="form-control" id="Amount" placeholder="Place your amount">
                    <div class="input-group-addon">.00</div>
                </div>
                <div class="col-sm-8">
                    <p style="color:#4099FF;"><strong>*Please Do not enter decimal numbers as your ammount.</strong></p>
                </div>
            </div>

            <div class="form-group ">                
                <div class="pull-right" style="margin-right: 1em;">
                    <button type="submit" class="btn btn-primary">Transfer Cash</button>
                </div>                
            </div>
        </form>
    </div>
{% endblock %}